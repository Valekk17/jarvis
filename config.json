{
  "version": "1.0.0",
  "event_capture": {
    "enabled": true,
    "sources": ["telegram", "filesystem", "n8n"],
    "events_file": "events.jsonl",
    "max_events_age_days": 30,
    "rotation_cron": "0 3 * * 0"
  },
  "knowledge_graph": {
    "file": "knowledge_graph.json",
    "auto_update_on_skill_change": true,
    "llm_inference_cron": "0 4 * * *",
    "llm_model": "gemini"
  },
  "activity_graph": {
    "file": "activity_graph.jsonl",
    "grouping_window_minutes": 30,
    "grouping_cron": "*/30 * * * *",
    "min_events_per_task": 2,
    "llm_model": "gemini"
  },
  "context_graph": {
    "file": "context_graph.json",
    "pattern_analysis_cron": "0 5 * * *",
    "min_pattern_occurrences": 3,
    "min_confidence": 0.6,
    "playbooks_file": "playbooks.md"
  },
  "self_evaluation": {
    "enabled": true,
    "cron": "0 6 * * *",
    "llm_model": "gemini"
  },
  "fs_watcher": {
    "watch_paths": ["brain/", "business/", "apps/", "skills/"],
    "ignore_patterns": ["node_modules", ".git", "*.log", "brain/context/events.jsonl"]
  },
  "privacy": {
    "hash_message_content": true,
    "exclude_raw_text": true,
    "hash_algorithm": "sha256"
  }
}
